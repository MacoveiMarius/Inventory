@model InventorySolution.Models.GestiuneModel

@{
    ViewBag.Title = "GestiuneEditor";
}

<div class="sursa row list-group-item">
    <div class="col-md-5">
        <div class="col-sm-2 sursa-id">
            @string.Format("#{0}", Model.GestiuneId)
        </div>
        <div class="col-sm-10">
            <span class="editable editable-click sursa-body"
           id="@string.Format("sursa_{0}", Model.GestiuneId)"
           data-type="text"
           data-title="Introduceti numele sursei"
           data-pk="@Model.GestiuneId"
           data-value="@Model.Nume">@Model.Nume</span>
            <span class="editable editable-click sursa-body"
           id="@string.Format("sursa_{0}", Model.GestiuneId)"
           data-type="text"
           data-title="Introduceti numele sursei"
           data-pk="@Model.GestiuneId"
           data-value="@Model.Prenume">@Model.Prenume</span>
            <span class="editable editable-click sursa-body"
           id="@string.Format("sursa_{0}", Model.GestiuneId)"
           data-type="text"
           data-title="Introduceti numele sursei"
           data-pk="@Model.GestiuneId"
           data-value="@Model.Catedra">@Model.Catedra</span>
        </div>
    </div>
    <div class="col-md-2">
        <a href="#" style="float: left" class="edit-sursa-button btn-sm btn-default input-sm">
            <i class="glyphicon glyphicon-pencil"></i>
        </a>
        <a data-href="@Url.Action("Delete", "Gestiune", new {id = Model.GestiuneId})" style="float: left" class="btn btn-sm btn-danger input-sm" data-toggle="modal" data-target="#confirm-delete">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>
